<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="4dp"
    tools:context="com.eg.cipher.MainActivity">




    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_options"
        android:layout_marginTop="15dip"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#cccccccc"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_algo_types"
        android:layout_marginTop="15dip"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#cccccccc"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:id="@+id/iv_image"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/btn_load_image"
        android:layout_marginTop="20dip"
        android:text="Load Image"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"

        >
    <EditText
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_text"
        android:textColorHint="@color/colorAccent"
        android:hint="Enter the text to encrypt"
        /> </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"

        >
        <EditText

            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_key"
            android:textColorHint="@color/colorAccent"
            android:hint="Enter the key"
            /> </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="encrypt"
        android:id="@+id/btn_encrypt"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textStyle="bold"

        android:visibility="gone"
        />
    <Button
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Decrypt"
        android:id="@+id/btn_decrypt"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#cccccccc"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypted Data"
        android:textSize="18dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        />



    <TextView
     android:textStyle="bold"
        android:textColor="#000000"
        android:paddingTop="15dip"
        android:textSize="18dip"
     android:layout_marginTop="10dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_output"

    android:lines="6"
    />

    <ImageView
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/iv_output_image"
        />
    <Button
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:id="@+id/btn_save"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:visibility="gone"
        />

</LinearLayout>
</ScrollView>