<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


   <Spinner
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:id="@+id/sp_audio_video"
       android:layout_marginTop="10dip"
       android:layout_marginBottom="10dip"
       ></Spinner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/video_section"
        android:orientation="vertical"
        android:padding="20dip"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_media_pass"
            android:hint="Enter Key"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt Video File"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:id="@+id/btn_encrypt_video"
        android:padding="5dip"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt Video File"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:id="@+id/btn_decrypt_video"
        android:padding="5dip"
        />
    </LinearLayout>


</LinearLayout>